<Window x:Class="InventoryManagementSystem.ProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="450" Width="800">
    <Grid>
        <!-- Controls for product management -->
        <TextBox Name="ProductNameTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" />
        <ComboBox Name="CategoryComboBox" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="200" />
        <TextBox Name="BarcodeTextBox" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="200" />

        <Button Content="Add Product" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,100,0,0" Click="AddProduct_Click"/>
        <Button Content="Edit Product" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,100,0,0" Click="EditProduct_Click"/>
        <Button Content="Delete Product" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="230,100,0,0" Click="DeleteProduct_Click"/>
        <Button Content="Generate Barcode" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="340,100,0,0" Click="GenerateBarcode_Click"/>

        <ListBox Name="ProductListBox" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="760" Height="200" />
    </Grid>
</Window>
