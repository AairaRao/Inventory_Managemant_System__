<Window x:Class="LoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login Page" Height="350" Width="400">
    <Grid>
        <TextBlock Text="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" FontWeight="Bold"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox Name="UsernameTextBox" Height="30" Margin="0,0,0,20" />

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" Height="30" Margin="0,0,0,20" />

            <Button Content="Login" Width="100" Height="35" HorizontalAlignment="Center" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
