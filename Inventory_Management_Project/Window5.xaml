<Window x:Class="SalesOrderManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Order Management" Height="400" Width="600">
    <Grid>
        <!-- Get Order Details Button -->
        <Button Content="Get Order Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,10,0,0" Click="GetOrderDetails_Click"/>

        <!-- Update Order Status Button -->
        <Button Content="Update Order Status" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,50,0,0" Click="UpdateOrderStatus_Click"/>

        <!-- Track Total Sales Button -->
        <Button Content="Track Total Sales" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,90,0,0" Click="TrackTotalSales_Click"/>

        <!-- Result TextBlock for displaying data -->
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="200" Margin="180,10,10,10" TextWrapping="Wrap" />
    </Grid>
</Window>
