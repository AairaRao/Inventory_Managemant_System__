<Window x:Class="ReorderAlertsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reorder Alerts" Height="400" Width="600">
    <Grid>
        <TextBlock FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            Reorder Alerts - Products Below Minimum Stock Levels
        </TextBlock>

        <!-- ListView for displaying reorder alerts -->
        <ListView Name="ReorderAlertsListView" Margin="10,40,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Current Stock" DisplayMemberBinding="{Binding StockLevel}" Width="120"/>
                    <GridViewColumn Header="Minimum Stock" DisplayMemberBinding="{Binding MinStockLevel}" Width="120"/>
                    <GridViewColumn Header="Reorder Suggestion" DisplayMemberBinding="{Binding ReorderSuggestion}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
