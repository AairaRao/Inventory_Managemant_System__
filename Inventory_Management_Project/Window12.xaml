<Window x:Class="WpfApp.NotificationsCenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notifications Center" Height="350" Width="500">
    <Grid>
        <!-- Notifications List -->
        <ListBox Name="NotificationsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="200" Margin="10,10,0,0"/>

        <!-- Latest Notification -->
        <TextBlock Name="NotificationTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="50" Margin="10,220,0,0" />

        <!-- Trigger Stock Alert Button (for testing purposes) -->
        <Button Content="Trigger Stock Alert" Name="TriggerStockAlertButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,270,0,0" Click="TriggerStockAlertButton_Click"/>

        <!-- Trigger Order Status Change Button (for testing purposes) -->
        <Button Content="Trigger Order Status Change" Name="TriggerOrderStatusNotificationButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="170,270,0,0" Click="TriggerOrderStatusNotificationButton_Click"/>
    </Grid>
</Window>
