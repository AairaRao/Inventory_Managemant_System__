<Window x:Class="BackupRestoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backup and Restore" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <!-- Backup Section -->
            <Button Name="BackupButton" Content="Backup Now" Width="150" Height="40" Margin="10" Click="BackupButton_Click"/>
            <CheckBox Name="AutoBackupCheckBox" Content="Enable Auto Backup" Margin="10"/>
            <TextBox Name="BackupDirectoryTextBox" Width="400" Margin="10"/>

            <!-- Restore Section -->
            <Button Name="RestoreButton" Content="Restore Now" Width="150" Height="40" Margin="10" Click="RestoreButton_Click"/>
            <TextBox Name="RestoreDirectoryTextBox" Width="400" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
